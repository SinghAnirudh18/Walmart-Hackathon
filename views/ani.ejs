// Product Filter System
class ProductFilter {
    constructor() {
        this.products = [];
        this.filteredProducts = [];
        this.init();
    }

    init() {
        // Get all product elements and extract their data
        this.extractProductData();
        
        // Bind filter events
        this.bindFilterEvents();
        
        // Initial display
        this.applyFilters();
    }

    extractProductData() {
        const productElements = document.querySelectorAll('.product-item');
        this.products = [];

        productElements.forEach((element, index) => {
            const titleElement = element.querySelector('.product-title a');
            const categoryElement = element.querySelector('.product-category');
            
            // **IMPROVED PRICE EXTRACTION LOGIC**
            // Look for the element that actually contains the current price.
            // Prioritize specific discount/regular price classes, then look for a generic h4 or strong tag.
            const discountPriceElement = element.querySelector('.discount-price');
            const regularPriceElement = element.querySelector('.regular-price');
            const generalPriceElement = element.querySelector('.h4') || element.querySelector('strong.price'); // Added strong.price for robustness
            
            let price = 0;
            if (discountPriceElement) {
                // If a discount price exists, use it
                const priceText = discountPriceElement.textContent.replace('$', '').replace(',', '');
                price = parseFloat(priceText) || 0;
            } else if (regularPriceElement) {
                // If a regular price exists (and no discount), use it
                const priceText = regularPriceElement.textContent.replace('$', '').replace(',', '');
                price = parseFloat(priceText) || 0;
            } else if (generalPriceElement) {
                // Fallback to a general price element if specific ones aren't found
                const priceText = generalPriceElement.textContent.replace('$', '').replace(',', '');
                price = parseFloat(priceText) || 0;
            }

            const originalPriceElement = element.querySelector('.original-price');
            let originalPrice = price; // Fallback to current price if original not found
            if (originalPriceElement) {
                const originalPriceText = originalPriceElement.textContent.replace('$', '').replace(',', '');
                originalPrice = parseFloat(originalPriceText) || price;
            }

            const productData = {
                element: element,
                index: index,
                title: titleElement ? titleElement.textContent.trim() : '',
                category: categoryElement ? categoryElement.textContent.trim().toLowerCase() : '',
                price: price, // This will be the price used for sorting and filtering
                originalPrice: originalPrice, // Used potentially for 'newest' or other logic
                visible: true
            };

            this.products.push(productData);
        });

        this.filteredProducts = [...this.products];
    }

    bindFilterEvents() {
        const categoryFilter = document.getElementById('categoryFilter');
        if (categoryFilter) {
            categoryFilter.addEventListener('change', () => {
                this.applyFilters();
                updateURLWithFilters(); // Update URL on filter change
            });
        }

        const priceFilter = document.getElementById('priceFilter');
        if (priceFilter) {
            priceFilter.addEventListener('change', () => {
                this.applyFilters();
                updateURLWithFilters(); // Update URL on filter change
            });
        }

        const sortFilter = document.getElementById('sortFilter');
        if (sortFilter) {
            sortFilter.addEventListener('change', () => {
                this.applyFilters();
                updateURLWithFilters(); // Update URL on filter change
            });
        }

        const searchInput = document.getElementById('searchInput');
        if (searchInput) {
            let searchTimeout;
            searchInput.addEventListener('input', (e) => {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    this.applyFilters();
                    updateURLWithFilters(); // Update URL on filter change
                }, 300);
            });
        }
    }

    applyFilters() {
        const categoryValue = document.getElementById('categoryFilter')?.value || '';
        const priceValue = document.getElementById('priceFilter')?.value || '';
        const sortValue = document.getElementById('sortFilter')?.value || '';
        const searchValue = document.getElementById('searchInput')?.value.toLowerCase().trim() || '';

        this.filteredProducts = [...this.products];

        // Apply category filter
        if (categoryValue) {
            this.filteredProducts = this.filteredProducts.filter(product => 
                product.category === categoryValue.toLowerCase()
            );
        }

        // Apply price filter
        if (priceValue) {
            this.filteredProducts = this.filteredProducts.filter(product => {
                const price = product.price;
                switch (priceValue) {
                    case '0-500':
                        return price >= 0 && price <= 500;
                    case '500-1000':
                        return price > 500 && price <= 1000;
                    case '1000+':
                        return price > 1000;
                    default:
                        return true;
                }
            });
        }

        // Apply search filter
        if (searchValue) {
            this.filteredProducts = this.filteredProducts.filter(product =>
                product.title.toLowerCase().includes(searchValue) ||
                product.category.includes(searchValue)
            );
        }

        // Apply sorting
        if (sortValue) {
            this.filteredProducts.sort((a, b) => {
                switch (sortValue) {
                    case 'price-low':
                        return a.price - b.price; // Ascending order
                    case 'price-high':
                        return b.price - a.price; // Descending order
                    case 'rating':
                        // Implement if you have rating data (e.g., return b.rating - a.rating;)
                        return 0; 
                    case 'newest':
                        // Sort by original order (assuming products are loaded newest first)
                        return a.index - b.index;
                    default:
                        return 0;
                }
            });
        }

        // Update display
        this.updateDisplay();
    }
    
    updateDisplay() {
        const productsGrid = document.getElementById('productsGrid');
        if (!productsGrid) return;

        // Create a document fragment to minimize reflows/repaints
        const fragment = document.createDocumentFragment();

        // Clear existing products in the grid
        while (productsGrid.firstChild) {
            productsGrid.removeChild(productsGrid.firstChild);
        }

        // Append filtered products to the fragment
        this.filteredProducts.forEach((product, index) => {
            product.element.style.opacity = '0';
            product.element.style.transform = 'translateY(20px)';
            product.element.style.transition = 'none'; // Temporarily remove transition for instant hiding
            fragment.appendChild(product.element);
        });

        // Append the fragment to the DOM
        productsGrid.appendChild(fragment);

        // Reapply animation for visible products
        this.filteredProducts.forEach((product, index) => {
            // Using setTimeout to ensure styles are applied before animation
            setTimeout(() => {
                product.element.style.transition = 'all 0.3s ease'; // Re-enable transition
                product.element.style.opacity = '1';
                product.element.style.transform = 'translateY(0)';
            }, index * 50); // Staggered animation
        });

        // Handle no results
        this.handleNoResults();

        // Update product count
        this.updateProductCount();
    }

    handleNoResults() {
        let noResultsMsg = document.getElementById('noResultsMessage');
        
        if (this.filteredProducts.length === 0) {
            if (!noResultsMsg) {
                noResultsMsg = document.createElement('div');
                noResultsMsg.id = 'noResultsMessage';
                noResultsMsg.className = 'col-12 text-center py-5';
                noResultsMsg.innerHTML = `
                    <div class="no-results-container">
                        <i class="fas fa-search fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">No products found</h4>
                        <p class="text-muted">Try adjusting your filters or search terms</p>
                        <button class="btn btn-outline-primary" onclick="productFilter.clearAllFilters()">
                            <i class="fas fa-refresh"></i> Clear All Filters
                        </button>
                    </div>
                `;
                document.getElementById('productsGrid').appendChild(noResultsMsg);
            }
        } else if (noResultsMsg) {
            noResultsMsg.remove();
        }
    }

    updateProductCount() {
        let countDisplay = document.getElementById('productCount');
        
        if (!countDisplay) {
            // Create product count display
            countDisplay = document.createElement('div');
            countDisplay.id = 'productCount';
            countDisplay.className = 'product-count mb-3';
            
            const filterSection = document.querySelector('.filter-section');
            if (filterSection) {
                // Prepend to filter section or append to a results header
                filterSection.appendChild(countDisplay); 
            } else {
                // Fallback if filter-section isn't found
                const productsGrid = document.getElementById('productsGrid');
                if (productsGrid) {
                    productsGrid.before(countDisplay);
                }
            }
        }

        const total = this.products.length;
        const showing = this.filteredProducts.length;
        
        countDisplay.innerHTML = `
            <small class="text-muted">
                Showing ${showing} of ${total} products
                ${showing !== total ? '<i class="fas fa-filter ms-1"></i>' : ''}
            </small>
        `;
    }

    clearAllFilters() {
        // Reset all filter controls
        const categoryFilter = document.getElementById('categoryFilter');
        const priceFilter = document.getElementById('priceFilter');
        const sortFilter = document.getElementById('sortFilter');
        const searchInput = document.getElementById('searchInput');

        if (categoryFilter) categoryFilter.value = '';
        if (priceFilter) priceFilter.value = '';
        if (sortFilter) sortFilter.value = '';
        if (searchInput) searchInput.value = '';

        // Reapply filters (which will show all products)
        this.applyFilters();
        updateURLWithFilters(); // Clear URL parameters as well

        // Show success message
        if (typeof showToast === 'function') {
            showToast('All filters cleared', 'info');
        }
    }

    // Method to refresh product data (useful after AJAX product loads)
    refresh() {
        this.extractProductData();
        this.applyFilters();
    }
}

